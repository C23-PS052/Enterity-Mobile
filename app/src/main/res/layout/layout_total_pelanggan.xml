<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/_16dp"
    >

    <TextView
        android:id="@+id/tv_title_total_penjualan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/titleMedium12Black"
        android:background="@drawable/bg_round_6_grey"
        android:paddingVertical="@dimen/_4dp"
        android:layout_margin="@dimen/_16dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:text="Total Pelanggan"
        android:textColor="@color/blue_bold"/>

    <TextView
        android:id="@+id/tv_harga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_total_penjualan"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/titleBold20Black"
        android:textColor="@color/primary"
        android:text="1.500 Orang"
        android:layout_marginVertical="@dimen/_8dp"
        android:layout_marginHorizontal="@dimen/_16dp"
        android:textSize="@dimen/_23sp"
        />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_harga"
        app:layout_constraintStart_toStartOf="@id/tv_harga"
        style="@style/titleRegular12Black"
        android:textColor="@color/green"
        android:text="+3,68%"
        android:layout_marginTop="@dimen/_8dp"
        android:textSize="@dimen/_16sp"/>

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/percent"
        app:layout_constraintTop_toTopOf="@id/percent"
        app:layout_constraintBottom_toBottomOf="@id/percent"
        android:layout_marginStart="@dimen/_4dp"
        style="@style/titleRegular12Black"
        android:textColor="@color/blue_bold"
        android:text="dari bulan lalu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_title_total_penjualan"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_total_penjualan"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/titleBold12Black"
        android:text="Lihat Detail"
        android:textColor="@color/primary"
        android:layout_margin="@dimen/_16dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title_total_penjualan"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_total_penjualan"
        android:layout_marginEnd="@dimen/_16dp"
        android:src="@drawable/sold"/>






</androidx.constraintlayout.widget.ConstraintLayout>