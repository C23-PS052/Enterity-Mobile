<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16dp">

    <TextView
        android:id="@+id/tv_title_total_keuntungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/titleMedium12Black"
        android:background="@drawable/bg_round_6_grey"
        android:paddingVertical="@dimen/_4dp"
        android:paddingHorizontal="@dimen/_10dp"
        android:text="Total Penjualan"
        android:textColor="@color/blue_bold"/>

    <TextView
        android:id="@+id/tv_harga_keuntungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title_total_keuntungan"
        app:layout_constraintStart_toStartOf="@id/tv_title_total_keuntungan"
        android:layout_marginTop="@dimen/_8dp"
        style="@style/titleBold20Black"
        android:textColor="@color/primary"
        android:text="Rp. 35.000.000"
        android:textSize="@dimen/_23sp"
        />

    <TextView
        android:id="@+id/percent_keuntungan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_harga_keuntungan"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/titleRegular12Black"
        android:textColor="@color/green"
        android:text="+5,42%"
        android:textSize="@dimen/_16sp"/>

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/percent_keuntungan"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginStart="@dimen/_8dp"
        style="@style/titleRegular12Black"
        android:textColor="@color/blue_bold"
        android:text="dari bulan lalu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_title_total_keuntungan"
        app:layout_constraintBottom_toBottomOf="@id/tv_title_total_keuntungan"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/titleBold12Black"
        android:text="Lihat Detail"
        android:textColor="@color/primary"
        />






</androidx.constraintlayout.widget.ConstraintLayout>