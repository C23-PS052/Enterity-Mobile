<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_20dp"
    android:background="@drawable/hometopbg">

    <TextView
        android:id="@+id/tv_selamat_datang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/titleMedium12Black"
        android:textColor="@color/white"
        android:text="@string/selamat_datang"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_selamat_datang"
        android:layout_marginTop="@dimen/_2dp"
        style="@style/titleBold14Black"
        android:textColor="@color/white"
        android:text="Toko Abadi Jaya"/>
    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="@dimen/_32dp"
        android:layout_height="@dimen/_32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/baseline_account_circle_24"
        app:tint="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>